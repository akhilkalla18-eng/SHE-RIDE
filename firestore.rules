
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isParticipant(ride) {
      return request.auth.uid in ride.participantIds;
    }

    function isDriver(ride) {
      return request.auth.uid == ride.driverId;
    }

    function isPassenger(ride) {
      return request.auth.uid == ride.passengerId;
    }

    // --- Rules for User Profiles ---
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.id == request.auth.uid;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // --- Rules for Ride Offers ---
    match /pickupRequests/{pickupRequestId} {
      allow get, list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userProfileId == request.auth.uid;
      allow update: if request.auth != null && (
        resource.data.userProfileId == request.auth.uid ||
        (resource.data.status == 'matched' && resource.data.matchedPassengerId == request.auth.uid && request.resource.data.status == 'open') ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['rejectedBy']) && request.auth.uid in request.resource.data.rejectedBy)
      );
      allow delete: if request.auth != null && resource.data.userProfileId == request.auth.uid;
    }

    // --- Rules for Ride Requests ---
    match /serviceRequests/{serviceRequestId} {
      allow get, list: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userProfileId == request.auth.uid;
      allow update: if request.auth != null && (
        resource.data.userProfileId == request.auth.uid ||
        (resource.data.status == 'matched' && resource.data.matchedDriverId == request.auth.uid && request.resource.data.status == 'open') ||
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['rejectedBy']) && request.auth.uid in request.resource.data.rejectedBy)
      );
      allow delete: if request.auth != null && resource.data.userProfileId == request.auth.uid;
    }

    // --- Rules for Confirmed Rides ---
    match /rides/{rideId} {
      allow get, delete: if request.auth != null && isParticipant(resource.data);
      allow list: if request.auth != null && request.query.where.participantIds.hasAny([request.auth.uid]);

      allow create: if request.auth != null && isParticipant(request.resource.data);

      allow update: if request.auth != null && (
          // A participant is updating the document
          (isParticipant(resource.data) && (
              // Cancellation Logic
              (
                (request.resource.data.status == 'cancelled_by_passenger' || request.resource.data.status == 'cancelled_by_provider') &&
                (resource.data.status == 'confirmed' || resource.data.status == 'start_pending' || resource.data.status == 'in-progress') &&
                request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
              ) ||
              // Passenger cancels their own pending request
              (
                request.resource.data.status == 'cancelled_by_passenger' &&
                resource.data.status == 'requested' &&
                isPassenger(resource.data) &&
                request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
              ) ||
              // Driver accepts a pickup request, moves to 'confirmed', adds OTP
              (
                isDriver(resource.data) &&
                resource.data.status == 'requested' &&
                request.resource.data.status == 'confirmed' &&
                request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'acceptedAt', 'rideOtp', 'otpVerified', 'riderStartConfirmed', 'passengerStartConfirmed', 'riderCompletionConfirmed', 'passengerCompletionConfirmed'])
              ) ||
              // Driver verifies OTP, moves to 'start_pending'
              (
                isDriver(resource.data) &&
                resource.data.status == 'confirmed' &&
                request.resource.data.status == 'start_pending' &&
                request.resource.data.otpVerified == true &&
                request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'otpVerified'])
              ) ||
              // Driver confirms start
              (
                isDriver(resource.data) &&
                resource.data.status == 'start_pending' &&
                request.resource.data.riderStartConfirmed == true &&
                request.resource.data.diff(resource.data).affectedKeys().hasOnly(['riderStartConfirmed'])
              ) ||
              // Passenger confirms start, moves to 'in-progress'
              (
                isPassenger(resource.data) &&
                resource.data.status == 'start_pending' &&
                resource.data.riderStartConfirmed == true &&
                request.resource.data.passengerStartConfirmed == true &&
                request.resource.data.status == 'in-progress' &&
                request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'passengerStartConfirmed'])
              ) ||
              // Driver confirms completion, moves to 'completion_pending'
              (
                isDriver(resource.data) &&
                resource.data.status == 'in-progress' &&
                request.resource.data.riderCompletionConfirmed == true &&
                request.resource.data.status == 'completion_pending' &&
                request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'riderCompletionConfirmed'])
              ) ||
              // Passenger confirms completion, moves to 'completed'
              (
                isPassenger(resource.data) &&
                resource.data.status == 'completion_pending' &&
                resource.data.riderCompletionConfirmed == true &&
                request.resource.data.passengerCompletionConfirmed == true &&
                request.resource.data.status == 'completed' &&
                request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'passengerCompletionConfirmed', 'completedAt'])
              )
          )) ||
          // A driver is accepting a service request, becoming a participant
          (
              !isParticipant(resource.data) && // Driver is NOT yet a participant
              resource.data.status == 'requested' &&
              request.resource.data.status == 'confirmed' &&
              request.resource.data.driverId == request.auth.uid &&
              request.resource.data.diff(resource.data).affectedKeys().hasAll(['status', 'driverId', 'participantIds', 'acceptedAt', 'rideOtp', 'otpVerified', 'riderStartConfirmed', 'passengerStartConfirmed', 'riderCompletionConfirmed', 'passengerCompletionConfirmed'])
          )
      );

      // --- Rules for Ride Chat Messages ---
      match /messages/{messageId} {
        function isRideParticipant() {
          return request.auth.uid in get(/databases/$(database)/documents/rides/$(rideId)).data.participantIds;
        }
        
        allow list, get: if request.auth != null && isRideParticipant();
        
        allow create: if request.auth != null && isRideParticipant() 
                      && request.resource.data.senderId == request.auth.uid
                      && (get(/databases/$(database)/documents/rides/$(rideId)).data.status == 'confirmed' ||
                          get(/databases/$(database)/documents/rides/$(rideId)).data.status == 'start_pending' ||
                          get(/databases/$(database)/documents/rides/$(rideId)).data.status == 'in-progress'
                         );
        
        allow update, delete: if false;
      }
    }

    // --- Rules for Chats ---
    match /chats/{chatId} {
      allow get, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
      allow list: if request.auth != null && request.query.where.participantIds.hasAny([request.auth.uid]);
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;
      allow delete: if false;
    }

    // --- Rules for SOS Alerts ---
    match /sos_alerts/{sosAlertId} {
      allow create: if request.auth != null && request.resource.data.userProfileId == request.auth.uid;
      allow read, update, delete: if false;
    }

    // --- Rules for Notifications ---
    match /notifications/{notificationId} {
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}

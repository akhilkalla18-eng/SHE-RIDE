
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isParticipant(ride) {
      return request.auth.uid in ride.participantIds;
    }

    function isDriver(ride) {
      return request.auth.uid == ride.driverId;
    }

    function isPassenger(ride) {
      return request.auth.uid == ride.passengerId;
    }
    
    function isCreatingOwnRide() {
    	return (request.resource.data.status == 'offering' && request.resource.data.driverId == request.auth.uid && request.resource.data.passengerId == null) ||
      (request.resource.data.status == 'pending' && request.resource.data.passengerId == request.auth.uid && request.resource.data.driverId == null);
    }
    
    function isAcceptingOpenRide() {
    	return (resource.data.status == 'pending' && resource.data.driverId == null && request.resource.data.status == 'confirmed' && request.resource.data.driverId == request.auth.uid);
    }

    // --- Rules for User Profiles ---
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.id == request.auth.uid;
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }

    // --- Rules for Rides ---
    match /rides/{rideId} {
      allow list: if request.auth != null;
      allow get: if request.auth != null;
      allow create: if request.auth != null && isCreatingOwnRide();
      
      // Allow participants to update the ride document.
      // Also allow a driver to accept an open request.
      allow update: if request.auth != null && (isParticipant(resource.data) || isAcceptingOpenRide() || request.auth.uid == resource.data.driverId);
			allow delete: if request.auth != null && isParticipant(resource.data);

      // --- Rules for Ride Chat Messages ---
      match /messages/{messageId} {
        function isRideParticipant() {
          return request.auth.uid in get(/databases/$(database)/documents/rides/$(rideId)).data.participantIds;
        }
        
        allow list, get: if request.auth != null && isRideParticipant();
        
        allow create: if request.auth != null && isRideParticipant() 
                      && request.resource.data.senderId == request.auth.uid
                      && (get(/databases/$(database)/documents/rides/$(rideId)).data.status == 'confirmed' ||
                          get(/databases/$(database)/documents/rides/$(rideId)).data.status == 'in-progress'
                         );
        
        allow update, delete: if false;
      }
    }

    // --- Rules for Ride Requests ---
    match /rideRequests/{rideRequestId} {
      // Any authenticated user can create a request, but they must be the passenger.
      allow create: if request.auth.uid != null && request.auth.uid == request.resource.data.passengerId;
      // The passenger or driver can read the request.
      allow read: if request.auth.uid != null && (request.auth.uid == resource.data.passengerId || request.auth.uid == resource.data.driverId);
      // Only the driver can update the request (to accept or reject it).
      allow update: if request.auth.uid != null && request.auth.uid == resource.data.driverId;
      // The passenger can delete their own request if it's still pending.
      allow delete: if request.auth.uid != null && request.auth.uid == resource.data.passengerId && resource.data.status == 'pending';
    }


    // --- Rules for SOS Alerts ---
    match /sos_alerts/{sosAlertId} {
      allow create: if request.auth != null && request.resource.data.userProfileId == request.auth.uid;
      allow read, update, delete: if false;
    }

    // --- Rules for Notifications ---
    match /notifications/{notificationId} {
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      allow create: if request.auth != null;
      allow delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
  }
}

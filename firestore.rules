
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Rules for User Profiles ---
    match /users/{userId} {
      // CREATE: A new user can create their own profile document.
      // The document ID must match their authentication UID.
      // The `id` field inside the document must also match their UID.
      allow create: if request.auth != null 
                    && request.auth.uid == userId 
                    && request.resource.data.id == request.auth.uid;
      
      // READ, UPDATE: A user can only read or update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;

      // DELETE: Deleting user profiles from the client is not allowed.
      allow delete: if false;
    }

    // --- Rules for Ride Offers ---
    match /pickupRequests/{pickupRequestId} {
      // READ: Any authenticated user can read all ride offers.
      // This is necessary for the "Ride Suggestions" page to work.
      allow read: if request.auth != null;

      // CREATE: An authenticated user can create a ride offer.
      // The `userProfileId` in the document must match their UID.
      allow create: if request.auth != null && request.resource.data.userProfileId == request.auth.uid;

      // UPDATE, DELETE: A user can only update or delete their OWN ride offers.
      allow update, delete: if request.auth != null && resource.data.userProfileId == request.auth.uid;
    }

    // --- Rules for Ride Requests ---
    match /serviceRequests/{serviceRequestId} {
      // READ: Any authenticated user can read all ride requests.
      // This is necessary for the "Ride Suggestions" page to work.
      allow read: if request.auth != null;

      // CREATE: An authenticated user can create a ride request.
      // The `userProfileId` in the document must match their UID.
      allow create: if request.auth != null && request.resource.data.userProfileId == request.auth.uid;
      
      // UPDATE, DELETE: A user can only update or delete their OWN ride requests.
      allow update, delete: if request.auth != null && resource.data.userProfileId == request.auth.uid;
    }

    // --- Rules for Confirmed Rides ---
    match /rides/{rideId} {
      // CREATE: A ride can be created if the user is one of the participants.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;
      
      // READ, UPDATE, DELETE: Only participants can read, update, or delete a ride document.
      allow read, update, delete: if request.auth != null && request.auth.uid in resource.data.participantIds;
    }

    // --- Rules for Chats ---
    match /chats/{chatId} {
      // CREATE: A chat can be created if the user is one of the participants.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;

      // READ, UPDATE: Only participants can read or update a chat document.
      allow read, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
      
      // DELETE: Chats cannot be deleted from the client.
      allow delete: if false;
    }

    // --- Rules for SOS Alerts ---
    match /sos_alerts/{sosAlertId} {
      // CREATE: An authenticated user can create an alert for themselves.
      allow create: if request.auth != null && request.resource.data.userProfileId == request.auth.uid;
      
      // READ, UPDATE, DELETE: These operations are not allowed from the client for security.
      allow read, update, delete: if false;
    }
  }
}


rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isCreatingOwnedDoc() {
      // Ensure the document being created has a userProfileId matching the requester's UID.
      return isSignedIn() && request.resource.data.userProfileId == request.auth.uid;
    }
    
    function isOwnerOfExistingDoc() {
      // Ensure the existing document's userProfileId matches the requester's UID.
      return isSignedIn() && resource.data.userProfileId == request.auth.uid;
    }
    
    function isParticipant(doc) {
      return isSignedIn() && 
             'participantIds' in doc.data &&
             doc.data.participantIds is list &&
             request.auth.uid in doc.data.participantIds;
    }

    // --- Collection Rules ---

    // User Profiles: Only the owner can read or write their own profile.
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Pickup & Service Requests:
    // TEMPORARILY simplified to debug permission errors.
    // This allows any authenticated user to read and write all requests.
    match /pickupRequests/{pickupRequestId} {
      allow read, write: if isSignedIn();
    }

    match /serviceRequests/{serviceRequestId} {
      allow read, write: if isSignedIn();
    }

    // Rides: Only participants can interact with a ride document.
    match /rides/{rideId} {
      allow read, write: if isParticipant(resource);
    }

    // Chats: Similar to rides, only participants can interact.
    match /chats/{chatId} {
      allow read, write: if isParticipant(resource);
    }

    // SOS Alerts: Only the owner can create an alert. 
    // Reading/deleting should be handled by a trusted backend process, not directly by clients.
    match /sos_alerts/{sosAlertId} {
      allow read, update, delete: if false;
      allow create: if isCreatingOwnedDoc();
    }
  }
}

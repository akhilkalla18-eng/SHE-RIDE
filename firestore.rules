
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Rules for User Profiles ---
    match /users/{userId} {
      // CREATE: A new user can create their own profile document.
      // The document ID must match their authentication UID.
      // The `id` field inside the document must also match their UID.
      allow create: if request.auth != null 
                    && request.auth.uid == userId 
                    && request.resource.data.id == request.auth.uid;
      
      // READ, UPDATE: A user can only read or update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;

      // DELETE: Deleting user profiles from the client is not allowed.
      allow delete: if false;
    }

    // --- Rules for Ride Offers ---
    match /pickupRequests/{pickupRequestId} {
      // GET: Any authenticated user can get a single ride offer.
      allow get: if request.auth != null;

      // LIST: Any authenticated user can list ride offers.
      allow list: if request.auth != null;

      // CREATE: An authenticated user can create a ride offer for themselves.
      allow create: if request.auth != null && request.resource.data.userProfileId == request.auth.uid;

      // UPDATE: Permissions for updating a pickup request.
      allow update: if request.auth != null && (
                      // Case 1: The owner of the request can make any changes.
                      // This covers creating, editing, cancelling, and accepting a request (moving to 'matched').
                      resource.data.userProfileId == request.auth.uid ||
                      
                      // Case 2: The matched passenger can cancel, which reverts the request back to 'open'.
                      (
                        resource.data.status == 'matched' && 
                        resource.data.matchedPassengerId == request.auth.uid &&
                        request.resource.data.status == 'open'
                      ) ||
                      
                      // Case 3: Any authenticated user can add themselves to the 'rejectedBy' list.
                      (
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['rejectedBy']) &&
                        request.auth.uid in request.resource.data.rejectedBy
                      )
                    );
      
      // DELETE: A user can only delete their OWN ride offers.
      allow delete: if request.auth != null && resource.data.userProfileId == request.auth.uid;
    }

    // --- Rules for Ride Requests ---
    match /serviceRequests/{serviceRequestId} {
      // GET: Any authenticated user can get a single ride request.
      allow get: if request.auth != null;

      // LIST: Any authenticated user can list ride requests.
      allow list: if request.auth != null;

      // CREATE: An authenticated user can create a ride request for themselves.
      allow create: if request.auth != null && request.resource.data.userProfileId == request.auth.uid;
      
      // UPDATE: Permissions for updating a service request.
      allow update: if request.auth != null && (
                      // Case 1: The owner of the request can make changes.
                      resource.data.userProfileId == request.auth.uid ||
                      
                      // Case 2: The matched driver can cancel, which reverts the request back to 'open'.
                      (
                        resource.data.status == 'matched' &&
                        resource.data.matchedDriverId == request.auth.uid &&
                        request.resource.data.status == 'open'
                      ) ||

                      // Case 3: Any authenticated user can add themselves to the 'rejectedBy' list.
                      (
                        request.resource.data.diff(resource.data).affectedKeys().hasOnly(['rejectedBy']) &&
                        request.auth.uid in request.resource.data.rejectedBy
                      )
                    );

      // DELETE: A user can only delete their OWN ride requests.
      allow delete: if request.auth != null && resource.data.userProfileId == request.auth.uid;
    }

    // --- Rules for Confirmed Rides ---
    match /rides/{rideId} {
      // Helper functions for create rule
      function isParticipant() {
        return request.auth.uid in request.resource.data.participantIds;
      }
      function isRequestingPassenger() {
        return request.resource.data.passengerId == request.auth.uid;
      }
      function isAcceptingDriver() {
        return request.resource.data.driverId == request.auth.uid;
      }

      // GET, DELETE: Only participants in the ride can access or delete a ride document.
      allow get, delete: if request.auth != null && request.auth.uid in resource.data.participantIds;
      
      // LIST: A user can query for rides only if they are filtering by their own UID in the 'participantIds' array.
      allow list: if request.auth != null && request.query.where.participantIds.hasAny([request.auth.uid]);

      // CREATE: A ride can be created by a participant.
      allow create: if request.auth != null && isParticipant() && (
        (
          request.resource.data.pickupRequestId != null &&
          isRequestingPassenger() &&
          rideId == request.resource.data.pickupRequestId + '_' + request.resource.data.passengerId
        ) ||
        (
          request.resource.data.serviceRequestId != null &&
          isAcceptingDriver()
        )
      );

      // UPDATE: Permissions for updating a ride document.
      allow update: if request.auth != null && request.auth.uid in resource.data.participantIds
                      && (
                        // Driver accepts a pending request
                        (
                          request.resource.data.status == 'accepted' &&
                          resource.data.status == 'requested' &&
                          resource.data.driverId == request.auth.uid &&
                          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status', 'acceptedAt'])
                        ) ||
                        // Passenger cancels their own pending request
                        (
                          request.resource.data.status == 'cancelled_by_passenger' &&
                          resource.data.status == 'requested' &&
                          resource.data.passengerId == request.auth.uid &&
                          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
                        ) ||
                        // Driver auto-cancels other pending requests during batch update
                        (
                          request.resource.data.status == 'cancelled_by_provider' &&
                          resource.data.status == 'requested' &&
                          resource.data.driverId == request.auth.uid &&
                          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
                        ) ||
                         // Either participant cancels an already accepted/confirmed ride
                        (
                          (
                            request.resource.data.status == 'cancelled_by_passenger' ||
                            request.resource.data.status == 'cancelled_by_provider'
                          ) &&
                          (resource.data.status == 'accepted' || resource.data.status == 'confirmed') &&
                          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['status'])
                        )
                      );
    }

    // --- Rules for Chats ---
    match /chats/{chatId} {
      // GET, UPDATE: Only participants can read or update a chat document.
      allow get, update: if request.auth != null && request.auth.uid in resource.data.participantIds;
      
      // LIST: A user can query for chats only if they are filtering by their own UID.
      allow list: if request.auth != null && request.query.where.participantIds.hasAny([request.auth.uid]);
      
      // CREATE: A chat can be created if the user is one of the participants.
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;
      
      // DELETE: Chats cannot be deleted from the client.
      allow delete: if false;
    }

    // --- Rules for SOS Alerts ---
    match /sos_alerts/{sosAlertId} {
      // CREATE: An authenticated user can create an alert for themselves.
      allow create: if request.auth != null && request.resource.data.userProfileId == request.auth.uid;
      
      // READ, UPDATE, DELETE: These operations are not allowed from the client for security.
      allow read, update, delete: if false;
    }

    // --- Rules for Notifications ---
    match /notifications/{notificationId} {
      // GET: A user can read a single notification document if their UID matches the document's 'userId' field.
      allow get: if request.auth != null && resource.data.userId == request.auth.uid;

      // LIST: A user can query the notifications collection ONLY if the query includes a 'where' clause
      // that filters for their own 'userId'.
      allow list: if request.auth != null && request.query.where.userId == request.auth.uid;

      // UPDATE: A user can update their own notification (e.g., marking it as read).
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;

      // CREATE: The backend logic (via batch writes initiated by a client) can create notifications.
      // We trust the client-side logic that triggers this to be correct.
      allow create: if request.auth != null;

      // DELETE: Deleting notifications from the client is not allowed to preserve history.
      allow delete: if false;
    }
  }
}
